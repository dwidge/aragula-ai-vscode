{
  "name": "aragula-ai-vscode",
  "displayName": "aragula-ai",
  "description": "Chat with files in vscode",
  "version": "0.0.2",
  "publisher": "dwidge",
  "repository": {
    "url": "https://github.com/dwidge/aragula-ai-vscode.git"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "aragula-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        }
      }
    },
    "commands": [
      {
        "command": "aragula-ai.askAI",
        "title": "Ask AI",
        "category": "AI"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "aragula-ai.askAI",
          "when": "resourceLangId != 'binary'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package-vsce": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "~20.14.13",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^18.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@dwidge/llm-file-diff": "^0.0.2",
    "openai": "^4.53.2"
  }
}
